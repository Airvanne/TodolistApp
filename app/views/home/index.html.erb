<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container borderless">
  <ul class="list-group">
    <% @categories.each do  |category|%>
      <li class="list-group-item">
        <button class="btn btn-info" id="id-btn-<%= category.title  %>"class="tablinks"> <%= category.title  %> </button>
      </li>
      <div id="id-content-<%= category.title  %>"class="card tabcontent">
        <ul class="list-group">
          <% category.tasks.each do |task|  %>
            <li class="list-group-item">
              <%= task.title  %>
              <% unless task.deadline.nil? %>
              , to read: <%= task.deadline.strftime('%D')  %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </ul>
</div>

<!-- A PLACER AILLEURS ET A METTRE EN DROPDOWN -->
<script type="text/javascript">
$(document).ready(function() {$('ul > .card').hide();
$('.container > ul > li').click(function(){
     if( $(this).next().is(":hidden") ) {
       $('ul > .card').hide(500);
       $(this).next().show(500);
      }
      else
      {
       $(this).next().hide(500);
      }
   });
$('.nav-item').hide();
   $('.rounded-circle').click(function(){
       $('.nav-item').toggle(500);
